    <div class="whatwedo_crud-blocks whatwedo_crud-blocks--show flex flex-wrap gap-4 items-baseline">
        {% for block in view.blocks(constant('whatwedo\\CrudBundle\\Enum\\Page::SHOW')) %}
            {% block block_definition_single_block %}
                {{ wwd_crud_render_block(block, view, constant('whatwedo\\CrudBundle\\Enum\\Page::SHOW')) }}
            {% endblock %}
        {% endfor %}
    </div>
{% endblock %}
