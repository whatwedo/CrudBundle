{
    "name": "whatwedo/crud-bundle",
    "type": "symfony-bundle",
    "description": "Very simple CRUD operations",
    "license": "MIT",
    "homepage": "https://doc.whatwedo.ch/whatwedo/crudbundle",

    "keywords": [
        "symfony-ux"
    ],
    "authors": [
        {
            "name": "whatwedo GmbH",
            "email": "welove@whatwedo.ch"
        }
    ],
    "require": {
        "php":                      ">=8.1",
        "symfony/framework-bundle": "~5.3|~6.0",
        "symfony/http-kernel":      "~5.3|~6.0",
        "symfony/security-bundle":  "~5.3|~6.0",
        "symfony/serializer":       "~5.3|~6.0",
        "symfony/form":             "~5.3|~6.0",
        "symfony/twig-bundle":      "~5.3|~6.0",
        "symfony/ux-turbo": "^2.0",
        "whatwedo/core-bundle":     "^1.0",
        "whatwedo/table-bundle":    "^1.0",
        "phpspec/prophecy":         "~1.0|~6.0",
        "knplabs/knp-menu-bundle":  "~v3.2.0",
        "symfony/webpack-encore-bundle": "^1.14"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^v6.0",
        "symfony/http-kernel": "^v6.0",
        "symfony/config": "^v6.0",
        "symfony/dependency-injection": "^v6.0",
        "symfony/yaml": "^v6.0",
        "symfony/framework-bundle": "^6.0",
        "symfony/validator": "^6.0",
        "symfony/maker-bundle": "^1.0.0",
        "nyholm/symfony-bundle-test": "^1.8",
        "doctrine/doctrine-bundle": "^2.5",
        "doctrine/orm": "^2.11",
        "doctrine/annotations": "^1.13.2",
        "whatwedo/php-coding-standard": "dev-develop",
        "zenstruck/foundry": "^1.16",
        "zenstruck/console-test": "^v1.1.0",
        "symfony/orm-pack": "^1.0",
        "symfony/translation": "^6.0",
        "symfony/twig-bundle": "^6.0",
        "whatwedo/core-bundle":     "dev-1.0-dev as 1.0",
        "whatwedo/table-bundle":    "dev-1.0-dev as 1.0",
        "whatwedo/search-bundle":    "dev-3.0-dev as 3.0",
        "gedmo/doctrine-extensions": "^3.5",
        "symfony/dotenv": "^6.0"
    },

    "suggest": {
        "mhujer/breadcrumbs-bundle": "Allows creation of breadcrumbs",
        "knplabs/knp-menu-bundle": "Allows creation of breadcrumbs",
        "whatwedo/twig-bootstrap-icons": "For using icons in the templates"
    },
    "autoload": {
        "psr-4": {
            "whatwedo\\CrudBundle\\": "src/",
            "whatwedo\\CrudBundle\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "twbs/icons",
                "version": "1.6.1",
                "source": {
                    "url": "https://github.com/twbs/icons",
                    "type": "git",
                    "reference": "tags/v1.6.1"
                }
            }
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
