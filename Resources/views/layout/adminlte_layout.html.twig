                            {% if content.createRoute and content.isAddAllowed|default %}
                                <a href="{{ path(content.createRoute, content.createRouteParameters(view.data)) }}" class="btn btn-success btn-xs">
                                    <i class="fa fa-plus"></i>
                                    {{ 'whatwedo_crud.add' | trans }}
