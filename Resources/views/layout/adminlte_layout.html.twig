                            <a href="{{ path(content.indexRoute, content.createRouteParameters(view.data)) }}" class="btn btn-primary btn-xs">
                                <i class="fa fa-list"></i>
                                {{ 'whatwedo_crud.show_all' | trans }}
                            </a>
                        {% endif %}
